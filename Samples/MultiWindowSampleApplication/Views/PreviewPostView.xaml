<UserControl x:Class="MultiWindowSampleApplication.Views.PreviewPostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MultiWindowSampleApplication.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#FFF7F7F7">
        <StackPanel Width="200" Height="200">
            <Label FontSize="22" Content="{Binding Post.Title, FallbackValue=Title}" />
            <TextBlock FontSize="14" TextWrapping="Wrap" Text="{Binding Post.Content , FallbackValue=Body Content}" />
        </StackPanel>
    </Grid>
</UserControl>