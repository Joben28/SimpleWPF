<UserControl
    x:Class="MultiWindowSampleApplication.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MultiWindowSampleApplication.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Background="White">
        <StackPanel Width="200" Height="200">
            <Label>Username</Label>
            <TextBox />
            <Label>Password</Label>
            <TextBox />
            <Button Command="{Binding LoginCommand}">Login</Button>
            <TextBlock Text="{Binding LoginCommand.Status}" />
        </StackPanel>
    </Grid>
</UserControl>